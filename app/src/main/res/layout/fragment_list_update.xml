<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="glory.golek.Fragment.ListUpdateFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/etEditPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_top_bg"
        android:hint="Personal Message"
        android:textColor="#000"
        android:padding="10dp"
        android:textColorHint="#cccccc"
        android:layout_toLeftOf="@+id/btn_sendPM"
         />

        <Button
            android:id="@+id/btn_sendPM"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_send_black_24dp"
            android:layout_alignParentRight="true"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

            />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_listupdate"
        android:layout_below="@+id/etEditPM"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true" />

    </RelativeLayout>

</FrameLayout>
