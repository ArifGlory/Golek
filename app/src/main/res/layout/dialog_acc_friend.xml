<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFAB1"
            android:elevation="4dp"
            android:paddingBottom="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

                 />

            <TextView
                android:id="@+id/user_profile_nameAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Nama"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_dialogaccTeman"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#CEF6EC"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:text="Accept"
                android:layout_below="@+id/user_profile_nameAcc"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp" />
            <Button
                android:id="@+id/btn_dialogtolakTeman"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#CEF6EC"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:text="Ignore"
                android:layout_below="@+id/btn_dialogaccTeman"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp" />

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>