<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_backprofile" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_black_36dp" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/colorFAB1"
            android:elevation="4dp"
            android:paddingBottom="24dp">

                 />

            <TextView
                android:id="@+id/user_profile_nameAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Nama"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bioAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_nameAdd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Personal Message "
                android:textColor="#fff"
                android:textSize="14sp" />
            <Button
                android:id="@+id/btn_dialogaddTeman"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#CEF6EC"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:text="Add"
                android:layout_below="@+id/user_profile_short_bioAdd"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp" />

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>